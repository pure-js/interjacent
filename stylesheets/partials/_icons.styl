// path-to-sprite = '/img/sprites/icon-sprite.png'
$light-gray = #d3d3d3
$vivid-orange = #ffa500

sprite($sprite) {
  background url(path-to-sprite)
  spritePosition($sprite)
  spriteWidth($sprite)
  spriteHeight($sprite)
}

sprites($sprites) {
  for $sprite in $sprites {
    $sprite_name = $sprite[9];
    .{$sprite_name}:after {
      sprite($sprite)
    }
  }
}


